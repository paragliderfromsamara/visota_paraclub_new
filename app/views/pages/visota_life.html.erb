<div class = 'central_field' style = 'width: 500px;'>
	<%= visota_life_buttons.html_safe %>
</div>
<div class = 'c_box even'>
	<div class = 'central_field' id = 'm_1000wh' style = 'padding: 38px 0 38px 0;'>
		<h2>
			Общение
		</h2>
		<%= topics_list_in_vl.html_safe %>
	</div>
</div>
<div class = 'c_box odd'>
	<div class = 'central_field' id = 'm_1000wh' style = 'padding: 38px 0 38px 0;'>
		<div class = 'section group'>
			<div class = 'col span_7_of_12'>
				<h2>
					Крайние фотоальбомы
				</h2>
				<% albs = PhotoAlbum.where(status_id: 1).order('created_at DESC').limit(2) %>
				<% albs.each do |alb| %>
					<div class = 'c_box'><div class = 'central_field' style = 'width: 95%; padding: 10px 0 10px 0;'><%= album_table(alb, 'visota_life').html_safe %></div></div>
				<% end %>
			</div>
			<div class = 'col span_1_of_12'>
			</div>
			<div class = 'col span_4_of_12'>
				<h2>
					Крайнее видео
				</h2>
				<% v = Video.all.order('created_at DESC').limit(3) %>
				<% v.each do |vid| %>
					<%= video_index_block(vid).html_safe %>
				<% end %>
			</div>
		</div>
	</div>
</div>

