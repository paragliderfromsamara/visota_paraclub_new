<div class = 'm_1000wh'>
    <div class = 'section group'>
        <div class = 'col span_10_of_12'>
            <%= mediaTypeMenu %>
            <%= mediaCategoryMenu %>
        </div>
        <div class = 'col span_2_of_12'>
            <%= will_paginate @entities %>
        </div>
    </div>
</div> 
<%= newMediaPanel %>  
<% if session[:media_type] == 'videos'%>
    <div class = 'c_box odd'>
        <div class = 'm_1000wh tb-pad-m' >
			<% @entities.each do |vid| %>
				<%= video_index_block(vid).html_safe %>
			<% end %>
        </div>
    </div>
<% else %>
	<% @entities.each do |alb| %>
		<div class = 'c_box'>
            <div class = 'm_1000wh tb-pad-s'>
                <%= album_table(alb, 'index').html_safe %>
            </div>
        </div>
	<% end %>
<% end %>
<div class = 'm_1000wh tb-pad-s'>
    <div class = 'section group'>
        <div class = 'col span_10_of_12'>
            <%= mediaCategoryMenu %>
        </div>
        <div class = 'col span_2_of_12'>
            <%= will_paginate @entities %>
        </div>
    </div>
</div>   


