<div class = 'm_1000wh'>
    <div class = 'section group'>
        <div class = 'col span_10_of_12'>
            <%= mediaTypeMenu %>
            <%= mediaCategoryMenu %>
        </div>
        <div class = 'col span_2_of_12'>
            <%= will_paginate @entities %>
        </div>
    </div>
</div> 
<%= newMediaPanel %>  
<% if session[:media_type] == 'videos'%>
    <div class = 'c_box odd'>
        <div class = 'm_1000wh tb-pad-m' >
			<% @entities.each do |vid| %>
				<%= video_index_block(vid).html_safe %>
			<% end %>
        </div>
    </div>
<% elsif session[:media_type] == 'articles'%>
    <div class = 'c_box odd'>
        <div class = 'm_1000wh tb-pad-m' >
    		<% if @entities != [] %>
    			<table class = 'v_table' id = 'article_table'>
        			<% @entities.each do |article| %>
        				<tbody class = 't_link' link_to = '<%= article_path(article) %>'>
        					<tr>
        						<td align = 'left' class = 'name' id = 'first'>
        							<%= article.name %>
        						</td>
        						<td align = 'right' class = 'date' id = 'last'>
        							 <%= my_time(article.accident_date) %>
        						</td>
        					</tr>
        				</tbody>
        			<% end %>
                </table>
    		<% else %>
    			<p class = 'istring norm'>В данной категории нет материалов...</p>
    		<% end %>
        </div>
    </div>
<% else %>
	<% @entities.each do |alb| %>
		<div class = 'c_box'>
            <div class = 'm_1000wh tb-pad-s'>
                <%= album_table(alb, 'index').html_safe %>
            </div>
        </div>
	<% end %>
<% end %>
<div class = 'm_1000wh tb-pad-s'>
    <div class = 'section group'>
        <div class = 'col span_10_of_12'>
            <%= mediaCategoryMenu %>
        </div>
        <div class = 'col span_2_of_12'>
            <%= will_paginate @entities %>
        </div>
    </div>
</div>   


