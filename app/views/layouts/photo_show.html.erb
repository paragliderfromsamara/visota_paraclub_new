<!DOCTYPE html>
<html>
<head>
  <title><%= my_title %></title>
  <meta name = 'description' content = '<%= meta_content %>' >
  <meta name = 'keywords' content = '<%= meta_keywords %>' >
  <meta property="og:title" content="<%= my_title %>">
  <meta property="og:image" content="<%= page_image %>">
  <meta property="og:description" content="<%= meta_content %>">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application", 'data-turbolinks-track' => true  %>
  <%= csrf_meta_tags %>
  <% define_action %>
  <%= vk_like_vidget[:script].html_safe %>
</head>
<body>
    <!-- Yandex.Metrika counter -->
    <script type="text/javascript">
        (function (d, w, c) {
            (w[c] = w[c] || []).push(function() {
                try {
                    w.yaCounter19725562 = new Ya.Metrika({
                        id:19725562,
                        clickmap:true,
                        trackLinks:true,
                        accurateTrackBounce:true
                    });
                } catch(e) { }
            });

            var n = d.getElementsByTagName("script")[0],
                s = d.createElement("script"),
                f = function () { n.parentNode.insertBefore(s, n); };
            s.type = "text/javascript";
            s.async = true;
            s.src = "https://mc.yandex.ru/metrika/watch.js";

            if (w.opera == "[object Opera]") {
                d.addEventListener("DOMContentLoaded", f, false);
            } else { f(); }
        })(document, window, "yandex_metrika_callbacks");
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/19725562" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
    <div style = "position: relative; width: 100%; height: 65px; background-color: black;" id = "topPhotoPanel">
        <div  class = "m_1000wh">
            <div class = "section group">
                <div style = "margin:0; padding:0;" class = "col span_2_of_12">
                    <a href = '<%= root_path %>'><%= image_tag "white_logo_ns.png", id: "mLogo", height: "55px" %></a>
                   
                </div>
                <div id = "mmPhPath" style = "margin:0; padding:0;" class = "col span_8_of_12">
                    <ul>
                       <%= @main_menu %> 
                    </ul>
                </div>
                <div id = "mmPhPath" style = "margin:0; padding:0;" class = "col span_2_of_12">
                    <ul>
                        <%= @link.html_safe %>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
	<div id = 'phContent'>
		<%= yield %>
        <div style = "position: relative; width: 100%;" id = "footerMark"></div>
	</div>
    <%= render "layouts/bottom" %>
</body>
</html>
