<div class = 'm_1000wh'>
	<h1><%= @title %></h1>
</div>
<div class = 'm_1000wh'>
    <%= navigation_string.html_safe %>
</div>
<%= "<div class = 'c_box'><div class = 'm_1000wh'>#{control_buttons(index_votes_buttons)}</div></div>".html_safe if control_buttons(index_votes_buttons) != ''%>
<div class = 'c_box'>
	<div class = 'm_1000wh'>
                <h2>Активные опросы</h2>
            	<% if @active_votes != [] %>
            		<table class = 'v_table'>
            			<tr>
            				<th id = 'first'>
            					Вопрос голосования
            				</th>
            				<th>
            					Отдано голосов
            				</th>
            				<th>
            					Дата начала голосования
            				</th>
            				<th>
            					Дата завершения голосования
            				</th>
                            <%if is_admin?%><th></th><%end%>
            			</tr>
            			<% @active_votes.each do |vote| %>
            				<tbody class = 't_link' link_to = '<%= vote_path(vote) %>' >
            				<tr>
            					<td id = 'first' style = 'width: 40%;'>
            						<%= truncate(vote.name, :length => 50) %>
            					</td>
            					<td>
            						<%= vote.voices.count %>
            					</td>
            					<td>
            						<%= my_time(vote.start_date) %>
            					</td>
            					<td>
            						<%= my_time(vote.end_date) %>
            					</td>
                                <% if is_admin? %>
                                   <td> <%= link_to "Удалить", vote, :method => 'delete', :class => 'b_link', :confirm => 'Вы уверены, что хотите удалить данное голосование?' %></td>
                                <%end%>
            				</tr>
            				</tbody>
            			<% end %>
            		</table>
            	<% else %>
            			<p class = 'istring norm medium-opacity'>Нет ни одного активного опроса...</p>
            	<% end %>
            		<br />
            		<br />
	</div>
</div>
<div class = 'c_box'>
	<div class = 'm_1000wh'>
    	<h2>Завершённые опросы</h2>
    	<% if @completed_votes != [] %>
    		<table class = 'v_table'>
    			<tr>
    				<th id = 'first'>
    					Вопрос голосования
    				</th>
    				<th>
    					Отдано голосов
    				</th>
    				<th>
    					Дата начала голосования
    				</th>
    				<th>
    					Дата завершения голосования
    				</th>
                   <%if is_admin?%><th></th><%end%>
    			</tr>
    			<% @completed_votes.each do |vote| %>
    				<tbody class = 't_link' link_to = '<%= vote_path(vote) %>' >
    				<tr>
    					<td id = 'first' style = 'width: 40%;'>
    						<%= truncate(vote.name, :length => 50) %>
    					</td>
    					<td>
    						<%= vote.voices.count %>
    					</td>
    					<td>
    						<%= my_time(vote.start_date) %>
    					</td>
    					<td>
    						<%= my_time(vote.end_date) %>
    					</td>
                        <% if is_admin? %>
                           <td> <%= link_to "Удалить", vote, :method => 'delete', :class => 'b_link', :confirm => 'Вы уверены, что хотите удалить данное голосование?' %></td>
                        <%end%>
    				</tr>
    				</tbody>
    			<% end %>
    		</table>
    	<% else %>
    			<p class = 'istring norm medium-opacity'>Нет ни одного завершённого опроса...</p>
    	<% end %>
    		<br />
    		<br />
	</div>
</div>
<div class = 'm_1000wh'>
    <%= navigation_string.html_safe %>
</div>