<div class = 'central_field' id = 'm_1100wh'>
    <div class = 'section group'>
        <div class = 'col span_10_of_12'>
            <%= albums_paths_buttons.html_safe %>
        </div>
        <div class = 'col span_2_of_12'>
            <%= will_paginate @albums %>
        </div>
    </div>
</div>
<div id = 'b_wrapper'>	
		<% if !is_not_authorized? %>
				<div class = 'c_box'><div class = 'central_field' id = 'm_1000wh'><%= control_buttons(index_albums_buttons).html_safe %></div></div>	
		<% end %>
		<% if @albums != [] %>
					<% i=0 %>
					<% @albums.each do |album| %>
						<%= album_index_block(album, i, 'index') %>
						<% i+=1 %>
					<% end %>
		<% else %>
			<div class = 'central_field' id = 'm_1000wh'>
				<p class = 'istring norm medium-opacity'>Нет ни одного фотоальбома в данной категории...</p>
				<br />
				<br />
			</div>
		<% end %>
</div>
