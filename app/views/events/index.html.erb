<div class = 'm_1000wh'>
    <%= will_paginate @event %>
</div>
<% if userCanCreateEvent? %>
    <div class = 'c_box'>
        <div class = 'm_1000wh'>
            <%= add_new_event %>
        </div>
    </div>
<%end%>
<% if @events != [] %>
    <% i = 0 %>
    <% @events.each do |event| %>
        <%= event_index_item(event, i).html_safe %>
        <%i+=1%>
    <% end %>
<% else %>
    <div class = 'm_1000wh'>
        <p class = 'istring'>
            Нет ни одной новости
        </p>
    </div>
<% end %>
