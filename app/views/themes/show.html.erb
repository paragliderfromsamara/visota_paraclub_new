<div class = 'm_1000wh'>
	<h1><%= @theme.name %></h1>
    <%= navigation_string.html_safe %>
</div>
<%= theme_show_block(true).html_safe %>
<%= newMessageFormInitial('none', '#new_message').html_safe %>
<% if @messages != [] %>
	<% i=0 %>
	<% @messages.each do |message| %>
		<% i+=1 %>
		<%= message_theme_box(message, true, i).html_safe %>
	<% end %>
<% else %>
	<div class = 'm_1000wh'>
		<p class = 'istring norm'>В теме нет ни одного сообщения...</p>
	</div>
<% end %>
<div class = 'm_1000wh'>
	<%= navigation_string.html_safe %>
</div>
