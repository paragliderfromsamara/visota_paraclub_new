<div class = 'm_1000wh'>
	<div class = 'section group'>
		<div class = 'col span_9_of_12'>
			<%= users_paths_buttons.html_safe %>
		</div>
		<div class = 'col span_3_of_12'>
			<%= will_paginate @users %>
		</div>
	</div>
</div>
<div id = 'b_wrapper' style='min-height: 400px;'>
    <% if @users != [] %>
        <%i=0%>
        <%if @users.first.user_group_id == 6%>
            <div class = 'm_1000wh tb-pad-s'>
                <h2>
                    Лица клуба
                </h2>
            </div>
            <%prev_group_id = 6%>
        <%else%>
            <%prev_group_id = 2%>
        <%end%>
		<% @users.each do |user| %>
            <%if prev_group_id == 6 && user.user_group_id != 6%>
                <div class = 'c_box'>
                <div class = 'm_1000wh tb-pad-s'>
                    <br />
                    <h2>
                        Клубные пилоты
                    </h2>
                </div>
            </div>
                <%prev_group_id = user.user_group_id%>
            <%end%>
			<%= user_index_list(user, i) %>
            <%i+=1%>
		<% end %>
	<% else %>
        <div class = 'm_1000wh'>
            <br />
            <br />
            <p class = 'istring norm'>Нет ни одного пользователя в данной категории</p>
        </div>
	<% end %>
</div>
<div class = 'm_1000wh'>
	<div class = 'section group'>
		<div class = 'col span_9_of_12'>
			<%= users_paths_buttons.html_safe %>
		</div>
		<div class = 'col span_3_of_12'>
			<%= will_paginate @users %>
		</div>
	</div>
</div>