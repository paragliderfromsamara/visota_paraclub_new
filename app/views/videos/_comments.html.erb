<% if @comments != [] %>
	<% i=0 %>
	<% @comments.each do |message| %>
		<% i+=1 %>
		<%= message_theme_box(message, true, i).html_safe %>
	<% end %>
<% else %>
	<div class = 'central_field' id = 'm_1000wh'>
		<p class = 'istring norm medium-opacity'>Нет ни одного комментария...</p>
	</div>
<% end %>