<div class = 'm_1000wh tb-pad-s'>
    <%= navigation_string.html_safe %>
</div>
<div class = 'm_1000wh tb-pad-s'>
    <div class = 'section group'>
        <div class = 'col span_7_of_12'>
            <%= topic_themes_filter if signed_in? %>
        </div>
        <div class = 'col span_5_of_12'>
            <%= will_paginate @themes %>
        </div>
    </div>
</div>
<div class = 'c_box even'>
    <div class = 'm_1000wh'>
    	<div class = 'section group' style = 'padding: 0; margin: 0;'>
            <div class = 'col span_11_of_12' style = 'padding: 0; margin: 0;'>
                <%= control_buttons(show_topic_buttons(@topic)).html_safe if control_buttons(show_topic_buttons(@topic)) != '' %>
            </div>
            <div class = 'col span_1_of_12'  style = 'padding: 0; margin: 0;'>
                <%= view_mode_themes_list.html_safe %>
            </div>
        </div>
    </div>
</div>
<% if @themes != [] %>
            <% if session[:themes_list_type] == 'list' %>
                <%i=0%>
                <% @themes.each do |th| %>
                    <%= themes_list_item(th,i).html_safe %>
                    <%i+=1%>
                <% end %>
            <% else %>
                <div class = 'c_box even'>
                	<div class = 'm_1000wh'>
                        <%= themes_table(@themes).html_safe %>
                	</div>
                </div>
            <% end %>
<% else %>
    <div class = 'c_box even'>
    	<div class = 'm_1000wh tp-pad-m' style = 'min-height: 300px;'>
    		<p class = 'istring norm tb-pad-m medium-opacity'>
                <% if params[:th_filter] == 'my' %>
                    В разделе нет ни одного созданной Вами темы...
                <% elsif params[:th_filter] == 'ntf' %> 
                    В разделе нет ни одной отслеживаемой Вами темы...
                <% elsif params[:th_filter] == 'deleted' && user_type == 'super_admin' %>
                    В разделе нет ни одной удалённой темы... 
                <%else%>
                    В разделе нет ни одной темы...
                <%end%>
             </p>
    	</div>
    </div>
<% end %>
<div class = 'm_1000wh tb-pad-s'>
    <div class = 'section group'>
        <div class = 'col span_7_of_12'>
            <%= topic_themes_filter if signed_in? %>
        </div>
        <div class = 'col span_5_of_12'>
            <%= will_paginate @themes %>
        </div>
    </div>
</div>
<div class = 'm_1000wh tb-pad-s'>
    <%= navigation_string.html_safe %>
</div>
