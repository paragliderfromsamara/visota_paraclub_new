<div class = 'c-box even'>
    <div class = 'm_1000wh tb-pad-s'>
        <%= form_for(@topic) do |f| %>
          <% if @topic.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

              <ul>
              <% @topic.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :name, 'Название раздела'%><br />
            <%= f.text_field :name, size: 50  %>
          </div>
          <div class="field">
            <%= f.label :image, 'Изображение раздела' %><br />
            <%= f.file_field :image %>
          </div>
          <div class="field">
            <%= f.label :description, 'Описание раздела' %><br />
            <%= f.text_area :description, rows: 10, cols: 50 %>
          </div>
          <div class="actions">
            <%= f.submit 'Сохранить' %>
          </div>
        <% end %>
    </div>
</div>